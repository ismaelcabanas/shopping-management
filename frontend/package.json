{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --reporter=verbose --pool=forks",
    "test:integration": "vitest run --config=vitest.integration.config.ts --reporter=verbose",
    "test:e2e": "echo 'E2E tests require additional setup (Playwright/Cypress). Running placeholder tests.' && vitest run tests/e2e --reporter=verbose",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ci": "npm run test:all",
    "test:ci:unit": "npm run test:unit",
    "test:ci:integration": "npm run test:integration",
    "test:coverage": "vitest run --coverage",
    "test:coverage:integration": "vitest run --config=vitest.integration.config.ts --coverage",
    "test:watch": "vitest --watch",
    "test:watch:integration": "vitest --config=vitest.integration.config.ts --watch"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
